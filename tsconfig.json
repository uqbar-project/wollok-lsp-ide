{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "outDir": "out",
    "rootDir": "packages",
    "sourceMap": true,
    "lib": ["esNext"],
    "declaration": true,
    "strict": false,
    "removeComments": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", ".vscode-test", "out"]
}
