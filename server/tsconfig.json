{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "out",
    "lib": ["esNext"],
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "composite": true
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test", "out"]
}
